{
    "name": "erikgaal/phpstan-psl-suggestions",
    "description": "PHPStan rules to suggest azziez/psl replacements for native features",
    "type": "phpstan-extension",
    "keywords": [
        "erikgaal",
        "phpstan-psl-suggestions"
    ],
    "homepage": "https://github.com/erikgaal/phpstan-psl-suggestions",
    "license": "MIT",
    "authors": [
        {
            "name": "Erik Gaal",
            "email": "me@erikgaal.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "phpstan/phpstan": "^2.1.13"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "ErikGaal\\PhpstanPslSuggestions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ErikGaal\\PhpstanPslSuggestions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {

            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
